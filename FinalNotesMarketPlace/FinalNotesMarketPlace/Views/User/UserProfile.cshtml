                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value">
                                <label>Last Name</label><span class="required">*</span>
                                @*<input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" placeholder="Enter Your Last Name">*@
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @value = Model.LastName, @placeholder = "Enter Your Last Name" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "form-error", style = "color:red; padding:0px 0px 0px 35px;" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value">
                                <label>Email</label><span class="required">*</span>
                                @*<input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" placeholder="Enter Your Email Address">*@
                                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", @value = Model.EmailID, @placeholder = "Enter Your Email Address" })
                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "form-error", style = "color:red; padding:0px 0px 0px 35px;" })
                            </div>
                        </div>
                        <div class="col-md-6 dob">
                            <div class="form-group signup-value input-img">
                                <label>Date Of Birth</label>
                                @*<input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" placeholder="Enter Your Date Of Birth">*@
                                @Html.TextBoxFor(model => model.DOB,"{0:dd/MM/yyyy}",new { @class = "form-control", @value = Model.DOB, })
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "form-error", style = "color:red; padding:0px 0px 0px 35px;" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value">
                                <label>Gender</label>
                                @*<select class="form-control form-control-sm">
            <option value="" disabled selected hidden>
                <label id="gender">
                    Select Your Gender
                </label>
            </option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>*@
