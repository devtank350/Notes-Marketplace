                                @Html.TextBoxFor(model => model.College, new { @class = "form-control", id = "univer@csity", placeholder = "Enter your College" })
                                @Html.ValidationMessageFor(model => model.College, "", new { @class = "form-error", style = "color:red;  padding: 0px 0px 0px 35px;" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary user-submit-btn">SUBMIT</button>
                    
