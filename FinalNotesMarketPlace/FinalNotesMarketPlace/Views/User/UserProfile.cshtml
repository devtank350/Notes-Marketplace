                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value">
                                <label>Zip Code</label><span class="required">*</span>
                                @*<input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" placeholder="Enter Your Zip Code">*@
                                @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control", placeholder = "Enter your zipcode", required = "required" })
                                @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "form-error", style = "color:red;  padding: 0px 0px 0px 35px;" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value">
                                <label>Country</label><span class="required">*</span>
                                @*<select class="form-control form-control-sm">
            <option value="" disabled selected hidden>Select Your Country</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>*@
                                @Html.DropDownListFor(model => model.Country, new SelectList(Model.CountryList, "Name", "Name", Model.Country), "Select your Country", new { @class = "form-control form-control-sm", required = "required" })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "form-error", style = "color:red;  padding: 0px 0px 0px 35px;" })
                            </div>
                        </div>
                   
                </div>
            </div>
        </div>
        <div id="college">
            <p id="college-details">University And College Information</p>
            <div class="content-box-md">
                <div class="container">
                    
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value">
                                <label>Univerity</label>
                                @*<input type="text" class="form-control" id="exampleInputtext1" aria-describedby="textHelp" placeholder="Enter Your University">*@
                                @Html.TextBoxFor(model => model.University, new { @class = "form-control", id = "univer@csity", placeholder = "Enter your university" })
