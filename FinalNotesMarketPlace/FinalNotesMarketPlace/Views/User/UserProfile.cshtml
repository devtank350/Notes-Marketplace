                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "form-error" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group signup-value phone">
                                <label>Phone Number</label><br>
                                                           <div class="col-md-2 col-sm-2 col-xs-2">
                                                               @*<select class="form-control form-control-sm" id="pn">
            <option value="" disabled selected hidden>+91</option>
            <option>0</option>
            <option>1</option>
            <option>2</option>
        </select>*@

                                                               @Html.DropDownListFor(model => model.PhoneNumberCountryCode, new SelectList(Model.CountryList, "CountryCode", "CountryCode", Model.PhoneNumberCountryCode), "Select Your Gender", new { @class = "form-control" })
