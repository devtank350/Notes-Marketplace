<body>
    <section id="login-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                    <img src="~/Content/images/pre-login/top-logo.png">
                </div>
            </div>
        </div>
        <div class="container actual-form">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "login-form" }))
                    {
                        @Html.AntiForgeryToken()

                        <h3 class="text-center">Login</h3>
                        <p class="text-center" id="below-text">Enter your email address and password to login</p>
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group login-value">
                            <label for="exampleInputEmail1">Email address</label>
                            <!--<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">-->
                            <span class="required">*</span>
                            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger", style = "color:red; padding = 0 0 0 35px" })
                            @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Email Address" } })
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group" id="up-incorrect">
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 navupassword">
                                <label>Password</label>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 navuforgot">
                                <span class="forgot">
                                    <!--<a href="forgot-password.html">Forgot password?</a>-->
                                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Home")
                                </span>
                            </div>


                            <!--<input id="password-field" type="password" class="form-control" name="password" value="Password">-->

                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", style = "color:red; padding = 0 0 0 35px" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Password", @id = "password-field" } })
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>

                        <div class="form-group form-check" id="remember-me">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">

                            <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                        </div>


                        <button type="submit" class="btn btn-primary btn-lg btn-block login-btn">LOGIN</button>
                        <p class="text-center" id="bottom-text">
                            Don't have an account?
                            @Html.ActionLink("Sign Up?", "SignUp", "Home")
                        </p>
                    }
                </div>
            </div>
        </div>
    </section>










